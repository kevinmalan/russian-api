@page "/alphabetChallenge"
@using UI.Services.Contracts
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<h3>AlphabetChallenge</h3>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2 class="mb-3">@_challengeLocalState.ChallengeText</h2>
            <input @bind="_challengeLocalState.ChallengeInputValue" type="text" class="form-control mb-3" placeholder="guess...">
            <div class="btn-group" role="group" aria-label="Basic example">
                <button @onclick="GoClicked" type="button" class="btn btn-primary">Go</button>
                <button type="button" class="btn btn-primary">Next</button>
                <button type="button" class="btn btn-primary">Reset</button>
            </div>
            <div class="mt-3">
                <label class="text-success">Correct</label>
            </div>
        </div>
    </div>
</div>

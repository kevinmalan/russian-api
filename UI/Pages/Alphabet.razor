@page "/alphabet"
@using UI.Services.Contracts
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<PageTitle>Alphabet</PageTitle>

<div class="container">
    <div class="container mt-1">
        <h1 class="russian-heading">Русский алфавит</h1>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Russian</th>
                <th>English</th>
                <th>Examples</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in AlphabetState.Value.Alphabet)
            {
                <tr>
                    <td>@item.Russian</td>
                    <td>@item.English</td>
                    <td>@item.Examples</td>
                </tr>
            }
        </tbody>
    </table>
</div>
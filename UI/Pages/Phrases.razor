@page "/phrases"
@using UI.Services.Contracts
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<PageTitle>Phrases</PageTitle>

<div class="container">
    <div class="container mt-1">
        <h1 class="russian-heading">Русские фразы</h1>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="russian" placeholder="Русский" @bind="_russianValue">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="english" placeholder="English" @bind="_englishValue">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <select class="form-select" id="category" @bind="_catergoryValue">
                <option value="Common">Common</option>
                <option value="Uncommon">Uncommon</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <button @onclick="Add" type="button" class="btn btn-dark">Add</button>
        </div>
    </div>
    <br />
    <button @onclick="Refresh" type="button" class="btn btn-dark refresh-btn">
        <i class="bi bi-arrow-repeat"></i>
    </button>
    <br/>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Russian</th>
                <th>Non Cyrillic Russian</th>
                <th>English</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in PhraseState.Value.Phrases)
            {
                <tr>
                    <td>@item.Russian</td>
                    <td>@item.NonCyrillicRussian</td>
                    <td>@item.English</td>
                    <td>@item.Category</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@page "/phrases"
@using UI.Services.Contracts
@inject IApiService ApiService

<PageTitle>Phrases</PageTitle>

<div class="container">
    <div class="container mt-1">
        <h1 class="russian-heading">Русские фразы</h1>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="russian" placeholder="Русский" @bind="russianValue">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="english" placeholder="English" @bind="englishValue">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10">
            <select class="form-select" id="category" @bind="catergoryValue">
                <option value="Common">Common</option>
                <option value="Uncommon">Uncommon</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <button @onclick="AddAsync" type="button" class="btn btn-dark">Add</button>
        </div>
    </div>
    <br/>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Russian</th>
                <th>Non Cyrillic Russian</th>
                <th>English</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in phrases)
            {
                <tr>
                    <td>@item.Russian</td>
                    <td>@item.NonCyrillicRussian</td>
                    <td>@item.English</td>
                    <td>@item.Category</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private string russianValue = "";
    private string englishValue = "";
    private string catergoryValue = "Common";

    private List<Shared.Dtos.Phrase> phrases = [];

    protected override async Task OnInitializedAsync()
    {
        phrases = await ApiService.GetPhrasesAsync();
    }

    private async Task AddAsync()
    {
        var phrase = new Shared.Dtos.Phrase
        {
            Russian = russianValue,
            English = englishValue,
            Category = catergoryValue,
            UniqueId = Guid.NewGuid()
        };
        // Send to Fluxor
        await ApiService.CreatePhraseAsync(phrase);
    }
}
